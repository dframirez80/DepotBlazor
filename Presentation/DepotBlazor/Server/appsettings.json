{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=ApiDepot;Integrated Security=True;Connect Timeout=30;"
  },
  "SecurityJwtSettings": {
    "Secret": "llave larga de 128 bits para que se cifre o puede ser mas larga",
    "ValidateAudience": false,
    "ValidateIssuer": false,
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "ValidAudience": "https://localhost:41960/",
    "ValidIssuer": "https://localhost:41960/",
    "Expiration":  600 // en minutos
  },
  "AllowedHosts": "*"
}
